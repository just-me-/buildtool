<?xml version="1.0"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/options.xsd">
    <import>
        <categories>
            <category name="mycategory">
                <parent>xyz</parent> <!-- Übergeordnete category. Wir empfehlen dringend eine passende bestehende Kategorie zu suchen und nur in Notfällen eine Kategorie ohne Elternteil anzulegen -->
            </category>
        </categories>
        <options>
            <option name="my_first_option"> <!-- Name der option, wird später als Konstante MY_FIRST_OPTION im System angelegt -->
                <categoryname>mycategory</categoryname> <!-- Kategorie -->
                <optiontype>boolean</optiontype> <!-- Typ der Option, alle gültigen Typen sind in wcf/lib/acp/option zu finden -->
                <defaultvalue>0</defaultvalue> <!-- Standard-Wert der Option -->
                <showorder>1</showorder> <!-- Anzeige-Reihenfolge -->
                <enableoptions>my_second_option</enableoptions> <!-- Bei boolean die Namen der Optionen die dadurch aktiviert werden, sonst keine Wirkung -->
            </option>
            <option name="chat_second_option">
                <categoryname>mycategory</categoryname>
                <optiontype>integer</optiontype>
                <defaultvalue>0</defaultvalue>
                <showorder>2</showorder>
            </option>
        </options>
    </import>
</data>