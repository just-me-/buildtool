<?xml version="1.0"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/groupoptions.xsd">
    <import>
        <categories>
            <category name="user.example">
                <parent>user</parent> <!-- Hier sollte man zwischen user, mod und admin wählen -->
                <showorder>10</showorder> <!-- Beliebiger Wert, sollte aber größer 5 sein -->
            </category>
        </categories>
        <options>
            <option name="user.example.foo">
                <categoryname>user.example</categoryname>
                <optiontype>boolean</optiontype> <!-- Typ des Rechts. Hierbei finden sich die Typen in wcf/lib/acp/group -->
                <defaultvalue>0</defaultvalue>
            </option>
            <option name="user.example.bar">
                <categoryname>user.example</categoryname>
                <optiontype>integer</optiontype>
                <defaultvalue>0</defaultvalue>
            </option>
        </options>
    </import>
</data>